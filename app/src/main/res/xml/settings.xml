<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:layout="@layout/settings_item"
        android:key="PUSH_CHOICE"
        android:title="@string/settings_push"
        android:summary="@string/settings_push_summary"
        android:defaultValue="gcm"
        android:entries="@array/settings_push_entries"
        android:entryValues="@array/settings_push_entryvalues" />

    <PreferenceCategory
        android:layout="@layout/settings_category"
        android:title="@string/settings_ui">

        <CheckBoxPreference
            android:layout="@layout/settings_item"
            android:key="ui_splashanim"
            android:title="@string/settings_ui_splashanim"
            android:summaryOn="@string/settings_ui_splashanim_on"
            android:summaryOff="@string/settings_ui_splashanim_off"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>